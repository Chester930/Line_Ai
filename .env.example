# LINE Bot Settings (LINE 機器人設定)
LINE_CHANNEL_SECRET=
LINE_CHANNEL_ACCESS_TOKEN=
LINE_BOT_ID=your_bot_id  # LINE 官方帳號的 Bot Basic ID

# AI API Settings (AI API 設定)
GOOGLE_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
CLAUDE_API_KEY=your_claude_api_key
DEFAULT_MODEL=gemini-pro  # 預設使用的 AI 模型

# Database Settings (資料庫設定)
DB_TYPE=sqlite
DATABASE_URL=sqlite:///data/line_ai.db

# Ngrok Settings (Ngrok 設定)
NGROK_AUTH_TOKEN=your_ngrok_token

# AI Model Settings (AI 模型參數設定)
MODEL_TEMPERATURE=0.7    # 溫度值：控制回應的創造性，0-1之間，越高越有創意但可能偏離主題
MODEL_TOP_P=0.9         # 機率閾值：控制字詞選擇的範圍，0-1之間，較高值保留更多可能性
MAX_OUTPUT_TOKENS=2000  # 最大輸出長度：限制回應的最大字數

# Logging (日誌設定)
LOG_LEVEL=INFO  # 日誌等級：INFO, DEBUG, WARNING, ERROR

# 參數說明：
# temperature: 較高的值會產生更有創意但可能不太準確的回應，較低的值產生更保守但準確的回應
# top_p: 控制模型在選擇下一個字詞時考慮的機率範圍，較高的值會讓回應更多樣化
# max_output_tokens: 控制回應的最大長度，避免產生過長的回應

# Other Settings
DEBUG=False
